@model ISIProject.Models.DeptManagerSelectProjects

@{
    ViewBag.Title = "Index";
}

<h2>Manage Projects</h2>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th></th>
            <th>
                @Html.DisplayName("Client")
            </th>
            <th>
                @Html.DisplayName("Project")
            </th>
        </tr>

        @for (int i = 0; i < Model.Projects.Count; i++)
        {
            <tr>
                <td>
                    @Html.CheckBoxFor(modelItem => Model.IsSelected[i])
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Projects[i].Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Projects[i].Name)
                </td>
            </tr>
        }
    </table>
    
    <input type="submit" name="submitButton" value="Save" />
}