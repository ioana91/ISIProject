@{
    ViewBag.Title = "Index";
}

@section AddToHead{
    <link rel='stylesheet' type='text/css' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/smoothness/jquery-ui.css' />
    <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'></script>
    <script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'></script>

    <script src="~/Scripts/ClientReport.js"></script>
}

<h2>Client Report</h2>
@using (Html.BeginForm())
{
    <br />
    <table>
        <tr>
            <td>
                @Html.Label("Select Start Date")
            </td>
            <td>
                @Html.Label("Select End Date")
            </td>
            <td></td>
        </tr>
        <tr>
            <td>
                <input type="text" id="startDatepicker">
            </td>
            <td>
                <input type="text" id="endDatepicker">
            </td>
            <td>
                <input type="button" id="btnDisplay" value="Display" /> 
            </td>
        </tr>
    </table>
}