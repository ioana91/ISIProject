@model ISIProject.Models.Employee

@{
    ViewBag.Title = "Index";
}

<h2>Manager</h2>

<p>
    @Html.ActionLink("Select Manager", "Select")
</p>
@*<p style="margin-left:auto; margin-right:auto;">
    <img src="../Images/like_a_boss.jpg" height = "400" width="400"/>
</p> *@
@if (Model.Name == null)
{
    <p>There is no current manager.</p>
}
else
{
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => Model.Email)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id=Model.EmployeeId })
            </td>
        </tr>
    </table>
}
